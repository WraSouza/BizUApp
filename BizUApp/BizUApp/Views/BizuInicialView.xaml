<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BizUApp.Views.BizuInicialView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
    xmlns:pages="clr-namespace:BizUApp.Views"
    Title="Seja Bem-Vindo(a)">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Image HeightRequest="100" Source="bizu_logo.png" />

            <Frame BorderColor="Gainsboro" HeightRequest="300">
                <StackLayout>
                    <Label
                        x:Name="txtNomeBolsa"
                        FontSize="25"
                        TextColor="Black" />

                    <Label
                        x:Name="txtPontosBolsa"
                        FontSize="25"
                        TextColor="Red" />

                    <charts:ChartView x:Name="grafico1" HeightRequest="180" />
                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>