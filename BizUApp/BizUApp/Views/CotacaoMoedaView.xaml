                        x:Name="txtEuro"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="25"
                        TextColor="Red" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        FontSize="15"
                        Text="Compra(R$)"
                        TextColor="Black" />

                    <Label
                        x:Name="txtCompraEuro"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        FontSize="25" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="15"
                        Text="Venda(R$)"
                        TextColor="Black" />

                    <Label
                        x:Name="txtVendaEuro"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="15,0,0,0"
                        FontSize="25" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        FontSize="15"
                        Text="Variação"
                        TextColor="Black" />

                    <Label
                        x:Name="txtVariacaoEuro"
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        FontSize="25" />

                </Grid>
            </Frame>
            
